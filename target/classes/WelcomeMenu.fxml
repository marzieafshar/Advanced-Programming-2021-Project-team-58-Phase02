<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="welcome-menu-background" stylesheets="@Styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Controller">
    <children>
        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#switchToRegisterMenu" text="Register">
         <font>
            <Font size="21.0" />
         </font>
      </Button>
      <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <bottom>
            <Button mnemonicParsing="false" onAction="#Exit" text="Exit" BorderPane.alignment="CENTER">
               <font>
                  <Font size="27.0" />
               </font>
            </Button>
         </bottom>
         <center>
              <Label text="Welcome" BorderPane.alignment="CENTER">
                  <font>
                      <Font size="55.0" />
                  </font>
               <graphic>
                    <Button fx:id="loginButton" mnemonicParsing="false" onAction="#switchToLoginMenu" prefHeight="45.0" prefWidth="104.0" text="Login">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Button>
               </graphic>
              </Label>
         </center>
      </BorderPane>
    </children>
</AnchorPane>
